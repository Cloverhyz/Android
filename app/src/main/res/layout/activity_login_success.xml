<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.kangningj.myapplication.activity.LoginSuccess">

    <com.example.kangningj.myapplication.customview.CircleImageView
        android:id="@+id/imv_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/defhead"
        app:border_width="0dp"
        app:border_color="@color/colorPrimaryDark"/>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_success"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="@string/hello"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
